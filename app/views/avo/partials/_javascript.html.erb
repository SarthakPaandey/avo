<%= javascript_tag nonce: true do %>
  window.AvoConfiguration = window.AvoConfiguration || {}
  AvoConfiguration.timezone = '<%= Avo.configuration.timezone %>'
  AvoConfiguration.root_path = '<%= root_path_without_url %>'
  AvoConfiguration.search_debounce = '<%= Avo.configuration.search_debounce %>'
  AvoConfiguration.cookies_key = '<%= Avo::COOKIES_KEY %>'
  AvoConfiguration.preserve_sidebar_scroll = '<%= ::Avo.configuration.feature_enabled?(:preserve_sidebar_scroll) %>'
  AvoConfiguration.focus_sidebar_menu_item = '<%= ::Avo.configuration.feature_enabled?(:focus_sidebar_menu_item) %>'
  <% if Avo.avo_dynamic_filters_installed? %>
  AvoConfiguration.avo_filters = {
    param_key: '<%= Avo::DynamicFilters.configuration.param_key %>'
  }
  <% end %>
<% end %>
